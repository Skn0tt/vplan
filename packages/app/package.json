{
  "name": "vplan-app",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "start:ios": "react-native run-ios",
    "start:android": "react-native run-android",
    "start:bundler": "yarn haul",
    "release:android": "cd android && ./gradlew assembleRelease",
    "emu:android": "$ANDROID_HOME/tools/emulator -avd Nexus_5X_API_26_x86",
    "test": "jest"
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "react": "^16.3.0-alpha.1",
    "react-native": "^0.54.2",
    "react-native-background-fetch": "^2.4.1",
    "react-native-elements": "^0.19.0",
    "react-native-modal": "^5.4.0",
    "react-native-push-notification": "^3.0.2",
    "react-native-vector-icons": "^4.5.0",
    "react-navigation": "^1.5.7",
    "react-redux": "^5.0.7",
    "vplan-redux": "^0.0.1",
    "vplan-util": "^0.0.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/lodash": "^4.14.105",
    "@types/react": "^16.0.40",
    "@types/react-native": "^0.52.18",
    "@types/react-native-vector-icons": "^4.4.3",
    "@types/react-navigation": "^1.2.3",
    "@types/react-redux": "^5.0.15",
    "@types/react-test-renderer": "^16.0.1",
    "babel-jest": "23.0.0-alpha.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react-native": "4.0.0",
    "haul": "^1.0.0-beta.13",
    "jest": "22.4.2",
    "react-test-renderer": "^16.3.0-alpha.1",
    "ts-jest": "^22.4.1",
    "ts-loader": "3.5.0",
    "typescript": "^2.7.2",
    "vplan-types": "^0.0.1"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
